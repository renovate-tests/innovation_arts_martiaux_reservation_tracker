<p id="notice"><%= notice %></p>

<h1>Tarifs</h1>

<table>
  <thead>
    <tr>
      <th>Class per week</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarifs.each do |tarif| %>
      <tr>
        <td><%= tarif.class_per_week %></td>
        <td><%= tarif.price  %> $ / 2 <%= t('semaines') %></td>
        <td><%= link_to 'Show', tarif %></td>
        <td><%= link_to 'Edit', edit_tarif_path(tarif) %></td>
        <td><%= link_to 'Destroy', tarif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tarif', new_tarif_path %>
