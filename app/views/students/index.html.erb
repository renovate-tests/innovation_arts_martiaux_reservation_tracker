<p id="notice"><%= notice %></p>

<h1><%= t('student').html_safe %>s</h1>

<table>
  <thead>
  <tr>
    <th><%=  t('name') %></th>
    <th><%=  t('date_of_birth') %></th>
    <th><%=  t('active') %></th>
    <th><%=  t('current_belt') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student['name'] %></td>
      <td><%= student['date_of_birth'] %></td>
      <td><%= student['active'] %></td>
      <td><%= student['color'] %></td>
      <td><%= link_to 'Show', student_url(student['id']) %></td>
      <td>
        <%=
          link_to 'Edit', edit_student_path(student['id'])
        %>
      </td>
      <td><%= link_to 'Destroy', student[:id], method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
