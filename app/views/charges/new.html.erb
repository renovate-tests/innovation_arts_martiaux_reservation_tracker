<h1>Payment</h1>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%= @reservation_details[:course_price].to_f / 100 %> $</span>
      <%= hidden_field_tag :amount, @reservation_details[:course_price] %>
      <%= hidden_field_tag :reservation, @reservation_details[:reservation] %>
    </label>
  </article>

  <%=  %>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @reservation_details[:course_price] %>"
          data-currency="CAD"
          data-locale="auto"></script>
<% end %>