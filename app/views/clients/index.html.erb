<p id="notice"><%= notice %></p>
<% unless @clients.empty? %>
  <nav class="will_paginate">
    <div class="digg_pagination">
      <div class="page_info">
        <%= page_entries_info @clients %>
      </div>
      <%= will_paginate @clients, :container => false %>
    </div>

  </nav>
<% end %>
<section class="actions">
  <%= render 'shared/search' %>
  <section class="new_record">
    <%= link_to t('new_client'), new_client_path %>
  </section>
</section>
<h1>Clients</h1>
<table>
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('telephone').html_safe %></th>
    <th><%= t('email') %></th>
    <th><%= t('active') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>

  <% @clients.each do |client| %>
    <tr>
      <td><%= client.name %></td>
      <td><%= client.telephone %></td>
      <td><%= client.email %></td>
      <td><%= client.active %></td>
      <td><%= link_to t('show'), client %></td>
      <td><%= link_to t('edit'), edit_client_path(client) %></td>
      <td><%= link_to t('destroy'), client, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

