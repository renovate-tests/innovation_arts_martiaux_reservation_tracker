<p id="notice"><%= notice %></p>

<h1><%= t('course_type') %></h1>
<nav class="pagination">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @course_types %>
    </div>
    <%= will_paginate @course_types, :container => false %>
  </div>
</nav>
<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_types.each do |course_type| %>
      <tr>
        <td><%= course_type.name %></td>
        <td><%= link_to t('show'), course_type %></td>
        <td><%= link_to t('edit'), edit_course_type_path(course_type) %></td>
        <td><%= link_to t('destroy'), course_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new_course_type'), new_course_type_path %>
