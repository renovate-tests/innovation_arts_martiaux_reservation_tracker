<nav class="will_paginate">
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
  </div>
</nav>
<section class="actions">
  <%= render 'shared/search' %>
  <section class="download">
    <label><%= t('Download') %>:
      <%= link_to "CSV", users_path(format: "csv"), class: 'download_link' %>
    </label>
  </section>
  <%= link_to t('Create New Client'), new_registration_path(User.new) %>
</section>
<h1><%= t('Users') %></h1>
<table>
  <thead>
  <tr>
    <th><%= t('name') %></th>
    <th><%= t('telephone').html_safe %></th>
    <th><%= t('email') %></th>
    <th><%= t('active') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.telephone %></td>
      <td><%= user.email %></td>
      <td><%= user.active %></td>
      <td><%= link_to t('show'), user %></td>
      <td><%= link_to t('edit'), edit_user_path(user) %></td>
      <td><%= link_to t('destroy'), user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

